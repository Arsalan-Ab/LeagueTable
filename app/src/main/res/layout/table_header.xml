<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/headerRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="#"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Team"
        app:layout_constraintStart_toEndOf="@+id/headerRank"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerMp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="8dp"
        android:text="Mp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="W"
        app:layout_constraintStart_toEndOf="@+id/headerMp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="D"
        app:layout_constraintStart_toEndOf="@+id/headerWin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerLoss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="L"
        app:layout_constraintStart_toEndOf="@+id/headerDraw"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="Pts"
        app:layout_constraintStart_toEndOf="@+id/headerGoalAgainst"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerGoalFor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="GF"
        app:layout_constraintStart_toEndOf="@+id/headerLoss"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headerGoalAgainst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="GA"
        app:layout_constraintStart_toEndOf="@+id/headerGoalFor"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>